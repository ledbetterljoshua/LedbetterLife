    <div id="container" class="container">
      <!-- Top Navigation -->
       
      <header class="header">
        <div class="bg-img"><%= image_tag("type.jpg", :alt => "background Image") %></div>
                <div class="title">
          <nav class="codrops-demos">
        <%= link_to "Photos", pins_path %>  
        <%= link_to "Blog", posts_path %>  
        <%= link_to "Portfolio", portfolio_path %>
        <% if user_signed_in? %>
          <%= link_to "Write Something | ", new_post_path %>  
          <%= link_to "+ Photo | ", new_pin_path %>
          <%= link_to "Settings", edit_user_registration_path %>
        <% else %>
          <%= link_to "| Log In", new_user_session_path %>
        <% end %>          </nav>
